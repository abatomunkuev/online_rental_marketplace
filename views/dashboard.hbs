<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/dashboard.css">
    <title>Dashboard</title>
</head>

<body>
    {{> header data}}
    {{> popupEdit editrooms = rooms}}
    {{> popupDelete deleterooms = rooms}}
    <main>
        <div class="hidden-header"></div>
        <div class="main-inner">
            <h1 class="Message">Welcome {{data.firstName}} {{data.lastName}} ðŸ‘‹</h1>
            <div class="dashboard">
                <div class="userinfo">
                    <div class="userinfo-inner">
                        <div class="userinfo-inner-header">
                            {{#if data.isAdmin}}
                            <h2>Admin information</h2>
                            {{else}}
                            <h2>User information</h2>
                            {{/if}}
                        </div>
                        <p>First name: {{data.firstName}}</p>
                        <p>Last name: {{data.lastName}}</p>
                        <div class="logoutButton buttons">
                            <a href="/logout">Logout</a>
                        </div>
                    </div>
                    {{#if data.isAdmin}}
                    <div class='addBnB'>
                        <div class="addBnB-inner-header">
                            <h2>BNB information</h2>
                        </div>
                        <div class="addBnB-inner-body">
                            <div class="addBnb-button buttons">
                                <a href='/roomAdd'>Add new BNB</a>
                            </div>
                            <div class="updateBnb-button buttons" id="roomEdit">
                                <a href=''>Edit BNB</a>
                            </div>
                            <div class="removeBnb-button buttons" id="roomRemove">
                                <a href=''>Remove BNB</a>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
                <div class="BnBinfo">
                    <div class="BnBinfo-inner-header">
                        {{#if data.isAdmin}}
                        <h1>Created bnb's</h1>
                        {{else}}
                        <h1>Booked bnb's</h1>
                        {{/if}}
                    </div>
                    {{#if data.isAdmin}}
                    {{#if rooms}}
                    <div class="rooms">
                        {{#each rooms}}
                        <div class="room">
                            <a href="/rooms/{{_id}}">{{increment @index}}. {{title}}</a>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <h2>No rooms created</h2>
                    {{/if}}
                    {{else}}
                    {{#if bookedRooms}}
                    <div class="rooms">
                        {{#each bookedRooms}}
                        <div class="room">
                            <a href="/rooms/{{_id}}">{{increment @index}}. {{title}}</a>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <h2>No rooms booked</h2>
                    {{/if}}
                    {{/if}}

                </div>
            </div>

        </div>
    </main>
    {{> footer}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/ScrollMagic.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/plugins/animation.gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ScrollMagic/2.0.7/plugins/debug.addIndicators.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
    <script src="/js/utils/animHeadPop.js"></script>
    <script src="/js/dashboard.js"></script>
</body>

</html>